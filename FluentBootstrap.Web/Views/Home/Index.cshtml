@using FluentBootstrap;

@{
    ViewBag.Title = "Index";
}

@model string

@using(Html.Bootstrap().Container())
{
    using (Html.Bootstrap().GridRow().AddCssClass("doc-row"))
    {
        using (Html.Bootstrap().All().GridColumn().Md(4))
        { 
            <p>A</p>
        }
        @Html.Bootstrap().All().GridColumn(8).AddContent("<p>B</p>") 
    }
    
    <hr />

    using (var row = Html.Bootstrap().GridRow().AddCssClass("doc-row"))
    {
        @row.GridColumn(8).AddHtml(@<p>C</p>)
        using (row.GridColumn().Md(4))
        {
            <p>D</p>
        }
    }
    
    <hr />
    
    @(Html.Bootstrap().GridRow().AddCssClass("doc-row")
        .AddChild(c => c.GridColumn(6).AddContent("E"))
        .AddChild(c => c.GridColumn(6).AddContent("F"))
    )
}
    
<hr />

@(Html.Bootstrap().Container().Fluid()
    .AddChild(x => x.GridRow().AddCssClass("doc-row")
        .AddChild(c2 => c2.GridColumn(6).AddContent("G"))
        .AddChild(c2 => c2.GridColumn(6).AddHtml(@<p>H</p>))
    )
)

<hr />

@using(Html.Bootstrap().Container())
{
    using(var table = Html.Bootstrap().Table().Responsive())
    {
        @table.TableHeading("A")
        @table.TableHeading("B").Warning()
        @table.TableHeadingRow("C", "D")
        @table.TableData("1")
        @table.TableData("2")
        @table.TableDataRow("3", "4")
        using (var row = table.TableRow().Danger())
        {
            @row.TableData("5")
            @Html.Bootstrap().All().TableHeading("6").ColSpan(2)
        }
        @table.TableHeadingRow("E", "F")
    }
    
    <hr />
    
    <div>@Html.Bootstrap().LinkButton("Google", "http://google.com", ButtonStyle.Success).BtnBlock()</div>
    <div>@Html.Bootstrap().Link("Home", "Index", "Home")</div>
    
    <hr />

    @(Html.Bootstrap().Table().Bordered()
      .AddChild(x => x.TableHeading().AddContent("test"))
    )  
            
    <hr />
    
    using (var form = Html.Bootstrap().Form().Horizontal(6))
    {
        @form.Input("A", inputType: FormInputType.Password)
        @form.Input("B").ControlLabel("Label B", l => l.Md(4)).Placeholder("Input something...").Md(8)
        using (form.FormGroup().AddCssClass("dave"))
        {
            @form.Input("C").Md(10).ControlLabel("Label C", l => l.Md(2))
        }
        @Html.Bootstrap().All().Input("Search", "Search Label")
        @form.TextArea("D", "D", "testing", rows: 3).Help("This is some help text.")
        @form.Radio("Radio", "Radio 1", "R1")
        @form.Radio("Radio", "Radio 2", "R2")
        @form.Radio("Radio", "Radio 3", "R3")
        using (var group = form.FormGroup("Inline"))
        {
            @group.Radio("Rd", null, "rd1").Inline()
            @group.Radio("Rd", null, "rd2").Inline()
            using (@group.HelpBlock())
            {
                <span>This is a <strong>help</strong> block.</span> 
            }
        }
        using (var group = form.FormGroup())
        {
            @group.Radio("Rd-b", "Rdb 1", "rdb1")
            @group.Radio("Rd-b", "Rdb 2", "rdb2")
        }
        <h4>Partial A</h4>
        @Html.Partial("~/Views/Home/Partial.cshtml", new int[] { 1, 2, 3 })
        @form.Select("S1", null, 1, 2, 3).InputSm()
        @form.Select("S2", "S2", 5, 6, 7).Multiple()
        @Html.Bootstrap().All().Static("Static", 1234)
        <h4>Partial B</h4>
        @Html.Partial("~/Views/Home/Partial.cshtml", "string model")
        using (var group = form.FormGroup())
        {
            <span>
                @group.Submit()
                @group.Reset("FOOBAR", ButtonStyle.Danger)
            </span>
        }
    }
    
    <hr />
    
    using (var form = Html.Bootstrap().Form())
    {
        @form.Input("Name", "Label") 
    }
    
    <hr />
    
    @(Html.Bootstrap().Form().Horizontal()
        .AddChild(c => c.Input("Child 1", "Child 1").HasSuccess().InputSm().Help("Testing the help text."))
        .AddChild(c => c.Input("Child 2"))
        .AddChild(fs => fs.FieldSet()
            .AddChild(c => c.FormGroup().Horizontal(false)
                .AddChild(x => x.Label("My Label"))
                .AddChild(x => x.Input("Password", inputType: FormInputType.Password))
                .AddChild(x => x.TextArea("Text", "Text<>", "Testing<>").Disabled().InputLg())
            )
            .AddChild(c => c.CheckBox("Checkbox", "Check Label", "Check Description", true).HasWarning().HasError())
            .AddChild(c => c.CheckBox("Checkbox", "Check Label", "Check Description", true).Help("Some help text."))
        )
    )
}

@{
    var model = new { A = "a", B = true, C = 123, D = new int[]{ 2, 4, 6, 8 } };
    using (Html.Bootstrap().Container())
    {
        using (var form = Html.Bootstrap(model).Form().Horizontal())
        { 
            @form.DisplayFor(x => x.A)
            @form.EditorFor(x => x.C)
            @form.DisplayFor(x => x.D)
            @form.DisplayListFor(x => x.D)
            @form.EditorListFor(x => x.D)
        }
    }    
}

