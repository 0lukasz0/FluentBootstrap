@using(Html.Bootstrap().Container())
{
    @Html.Bootstrap().Heading1("FluentBootstrap Tests")
    using (var list = Html.Bootstrap().List())
    {
        @list.ListItem(Html.Bootstrap().Link("Buttons", "/Tests/Buttons"))
        @list.ListItem(Html.Bootstrap().Link("Dropdowns", "/Tests/Dropdowns"))
        @list.ListItem(Html.Bootstrap().Link("Forms", "/Tests/Forms"))
        @list.ListItem(Html.Bootstrap().Link("Grids", "/Tests/Grids"))
        @list.ListItem(Html.Bootstrap().Link("Icons", "/Tests/Icons"))
        @list.ListItem(Html.Bootstrap().Link("Typography", "/Tests/Typography"))
    }
}
